.container {
  max-width: 500px;
  margin: auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100vh;
}
.title {
  font-size: 28px;
  font-weight: bold;
  margin-bottom: 30px;
}
.input-group {
  margin-bottom: 20px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.input-label {
  font-size: 18px;
  margin-bottom: 10px;
}
.input-field {
  width: 100%;
  max-width: 400px;
  height: 40px;
  padding: 10px;
  font-size: 16px;
  border: 1px solid #ccc;
  border-radius: 5px;
  box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
}
.btn {
  width: 100%;
  max-width: 400px;
  height: 40px;
  margin-top: 20px;
  font-size: 16px;
  color: #fff;
  background-color: #007aff;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
}
.result {
  font-size: 20px;
  margin-top: 30px;
}

